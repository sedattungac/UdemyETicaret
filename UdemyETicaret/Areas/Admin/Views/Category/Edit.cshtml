@model UdemyETicaret.Models.Category

@{
    ViewData["Title"] = "Kategori Düzenleme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Kategori Düzenleme</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoryID" />
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CategoryStatus" /> @Html.DisplayNameFor(model => model.CategoryStatus)
                </label>
            </div>
            <div class="form-group">
                <div class="float-left">
                    <a class="btn btn-primary btn-sm text-white" asp-action="Index">Listeye Dön</a>
                </div> &nbsp;
                <div class="float-right">
                    <input type="submit" value="Ekle" class="btn btn-primary  btn-sm text-white" />

                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
