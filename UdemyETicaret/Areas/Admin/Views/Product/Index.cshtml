@model IEnumerable<UdemyETicaret.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">
    <div class="float-left">
        <h3>Ürünler Listesi</h3>
    </div>
    <div class="float-lg-right">
        <a asp-action="Create" class="btn btn-primary btn-sm">Ürün Ekle</a>
    </div>
    <table class="table table-striped table-bordered" id="example">
        <thead>
            <tr>
                <th>
                    Resim
                </th>
                <th>
                    Başlık
                </th>


                <th>
                    Anasayfa
                </th>
                <th>
                    Stok
                </th>
                <th>
                    Kategori
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (item.ProductImage == null)
                        {
                            <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/6/65/No-Image-Placeholder.svg/1665px-No-Image-Placeholder.svg.png" width="100" height="80" />
                        }
                        else
                        {
                            <img src="@item.ProductImage" width="100" height="80" />
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductTitle)
                    </td>


                    <td>
                        @if (item.ProductIsHome)
                        {
                            <label class="btn btn-success btn-sm"><i class="bi bi-check-lg"></i>Evet</label>
                        }
                        else
                        {
                            <label class="btn btn-danger btn-sm"><i class="bi bi-x-lg"></i>Hayır</label>
                        }
                    </td>
                    <td>
                        @if (item.ProductIsStock)
                        {
                            <label class="btn btn-success btn-sm"><i class="bi bi-check-lg"></i>Evet</label>
                        }
                        else
                        {
                            <label class="btn btn-danger btn-sm"><i class="bi bi-x-lg"></i>Hayır</label>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.CategoryName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ProductID" class="btn btn-success btn-sm"><i class="bi bi-pencil"></i></a>

                        <a asp-action="Delete" asp-route-id="@item.ProductID" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts{
    <script type="text/javascript">
    $(document).ready(function () {
        $('#example').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
            }
        });
    });
    </script>
}